<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="purple">#FF673AB7</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="cornerHigh">16dp</dimen>
    <dimen name="cornerLow">8dp</dimen>
    <string name="app_name" translatable="false">App Designer</string>
    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
		<item name="track">@drawable/switch_track</item>
		<item name="android:thumb">@drawable/switch_thumb</item>
	</style>
    <style name="Theme.AppTheme" parent="Theme.Material3.Light.NoActionBar">
		<item name="colorAccent">@color/purple</item>
		
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
		
		<item name="android:colorBackground">#ffffff</item>
		
		<item name="colorSurface">@color/white</item>
		<item name="colorOnSurface">@color/black</item>
		
		<item name="colorContainer">@color/purple</item>
		<item name="colorOnContainer">@color/white</item>
		
		<item name="android:statusBarColor">?android:attr/colorBackground</item>
		<item name="android:windowLightStatusBar">true</item>
		
		<item name="android:fontFamily">@font/josefinsans_regular</item>
		
		<item name="switchStyle">@style/SwitchStyle</item>
    </style>
    <style name="ToolbarButtonStyle">
		<item name="android:layout_width">35dp</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:tint">?attr/colorOnSurface</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
	</style>
</resources>